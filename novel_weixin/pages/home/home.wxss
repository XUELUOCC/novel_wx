/* pages/home/home.wxss */
.search{
    width:95%;
    height:60rpx;
    margin:0 auto;
}
.searchContent{
    width:100%;
    height:100%;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    background-color:#f5f7fa ;
    border-radius: 10rpx;
}
.searchContent input{
    width:100%;
    height:100%;
    border:0;
    border-radius: 10rpx;
    background-color:#f5f7fa;
}
.searchContent image{
    height:100%;
}

/*swiper*/
.swiperTop{
    width:90%;
    height:auto;
    margin:20rpx auto 0;
    border-radius: 10rpx;
    overflow: hidden;
}
.swiperTop  image{
    width:100%;
}

/*book的内容*/
.bookContent{
    width:90%;
    height:600rpx;
    margin:20rpx auto 0;
    border:1rpx solid #ddd;
    border-radius: 10rpx;
    box-shadow: 3rpx 2rpx 3rpx #f5f5f6;
}
.bookTop{
    width:95%;
    height:250rpx;
    margin:10rpx auto 0;
    display: flex;
    justify-content: space-around;
    align-items: center;
}
.bookTopLeft{
    width:30%;
    height:100%;
    /* border:1rpx solid red; */
}
.bookTopLeft image{
    height:100%;
}
.bookTopRight{
    width:70%;
    height:80%;
    margin:0 auto;
    /* border:1rpx solid red; */
    display:flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: flex-start;
}
.bookTopRight text{
    padding-left:10rpx;
}
.bookTitle{
    font-weight:700;
    font-size:45rpx;
}
.bookIntroduct{
    height:100rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-start;
}
.bookIntroduct text{
    color:#838a96;
}
.bookCenter{
    width:95%;
    /* height:120rpx; */
    margin:0 auto;
    /* border:1rpx solid red; */
}
.bookCenterContent{
    width:100%;
    /* height:100%; */
    margin-top:10rpx;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;/*设置 需要显示的行数*/
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
}
.bookCenterContent text{
    width:100%;
    height:100%;
}
.bookRecommend{
    width:95%;
    height:90rpx;
    margin:0 auto;
    /* border:1rpx solid red; */
}
.bookRecommend text{
    width:100%;
    height:100%;
    text-align: center;
    line-height:90rpx;
    color:#ded0ba;
    font-size:42rpx;
}
.bookBottom{
    width:95%;
    height:120rpx;
    margin:0 auto;
    /* border:1rpx solid red; */
    display:flex;
    justify-content: space-around;
    align-items: center;
}
.bookBottomLeft,.bookBottomCenter,.bookBottomRight{
    height:80%;
    /* border:1rpx solid red; */
}
.bookBottomLeft{
    flex:1;
    text-align: center;
    line-height:120rpx;
}
.bookBottomCenter{
    flex:1;
    text-align: center;
    line-height:120rpx;
}
.bookBottomRight{
    flex:2;
    text-align: center;
    line-height:120rpx;
}
.bookBottom image{
    height:70%;
}
.bookBottomRight button{
    border-radius: 50rpx;
    background-color:#ff0000;
    color:#fff;
    width:100%!important;
    height:100%;
}