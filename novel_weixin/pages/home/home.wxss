/* pages/home/home.wxss */
.search{
    width:90%;
    height:60rpx;
    margin:0 auto;
}
.searchContent{
    width:100%;
    height:100%;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    background-color:#f5f7fa ;
    border-radius: 10rpx;
}
.searchContent input{
    width:100%;
    height:100%;
    border:0;
    border-radius: 10rpx;
    background-color:#f5f7fa;
}
.searchContent image{
    height:100%;
}

/*swiper*/
.swiperTop{
    width:85%;
    height:auto;
    margin:20rpx auto 0;
    border-radius: 10rpx;
    overflow: hidden;
}
.swiperTop  image{
    width:100%;
}

/*book的内容*/
.bookContent{
    width:85%;
    height:450rpx;
    margin:20rpx auto 0;
    border:1rpx solid #ddd;
    border-radius: 10rpx;
    box-shadow: 3rpx 2rpx 3rpx #f5f5f6;
}