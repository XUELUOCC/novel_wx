/* pages/bookDetail/bookCity.wxss */
.bookCity{
    width:100%;
    height:auto;
}
/**搜索栏 */
.search{
    width:95%;
    height:60rpx;
    margin:0 auto;
}
.searchContent{
    width:100%;
    height:100%;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    background-color:#f5f7fa ;
    border-radius: 10rpx;
}
.searchContent input{
    width:100%;
    height:100%;
    border:0;
    border-radius: 10rpx;
    background-color:#f5f7fa;
}
.searchContent image{
    height:100%;
}

/**tab栏切换 */
.weui-tabs-bar__item{
    margin:0 20rpx 0 20rpx;
}
.tab-bar-title__selected text{
    font-weight:700;
}   
.weui-tabs-bar__wrp {
    border-bottom:2rpx solid #ddd;
}
.tabContent{
    width:100%;
    margin:20rpx auto 0;
    height:auto;
}